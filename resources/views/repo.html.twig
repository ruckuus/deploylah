{% extends 'layout.html.twig' %}
{% set active = 'repo' %}

{% block content %}

    <h3>{{ 'Connect your GitHub account'|trans }}</h3>

    {% if error %}
        <div class="alert alert-error">
            {{ error }}
        </div>
        <div class="alert alert-info">
            <strong>Hint:</strong> Try <code>username</code>/<code>password</code>
        </div>

    {% endif %}

    <form action="{{ path('repo') }}" method="post" novalidate {{ form_enctype(form) }} class="form-vertical">
        {{ form_widget(form) }}
        <div class="form-actions">
            <button type="submit" class="btn btn-primary">{{ 'Send'|trans }}</button>
        </div>
    </form>

{% endblock %}
